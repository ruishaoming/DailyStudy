<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recycler_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="20px">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="260px"
        android:layout_height="150px">

        <ImageView
            android:id="@+id/recycler_item_img"
            android:layout_width="200px"
            android:layout_height="150px"
            android:src="@mipmap/icon" />
    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="420px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="10px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recycler_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/main_activity_bottom_tv" />

        <TextView
            android:id="@+id/recycler_item_school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:textColor="@color/main_bottom_tv_normal" />

        <com.zhy.autolayout.AutoRelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px">

            <TextView
                android:id="@+id/recycler_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100px"
                android:layout_marginRight="10px"
                android:layout_toLeftOf="@+id/recycler_item_count"
                android:src="@mipmap/person" />

            <TextView
                android:id="@+id/recycler_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"
                android:text="12人在学"
                android:textColor="@color/main_bottom_tv_normal" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

</LinearLayout>
